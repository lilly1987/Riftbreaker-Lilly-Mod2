import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"

material buildings/resources/dehumidifier : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/resources/dehumidifier.dds
	set_texture_alias normal			materials/textures/buildings/resources/gas_filtering_plant_normal.dds
	set_texture_alias packed			materials/textures/buildings/resources/gas_filtering_plant_packed.dds
	set_texture_alias emissive			materials/textures/buildings/resources/gas_filtering_plant_emissive.dds
}
material buildings/resources/dehumidifier_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/resources/dehumidifier.dds
	set_texture_alias normal			materials/textures/buildings/resources/gas_filtering_plant_normal.dds
	set_texture_alias packed			materials/textures/buildings/resources/gas_filtering_plant_packed.dds
	set_texture_alias emissive			materials/textures/buildings/resources/gas_filtering_plant_emissive.dds
}

import * from "materials/scripts/gui.material"

material gui/hud/building_icons/dehumidifier : gui/default
{
	set_texture_alias diffuse			materials/textures/gui/hud/building_icons/dehumidifier.dds
}
material gui/hud/building_icons/dehumidifier_disabled : gui/default
{
	set_texture_alias diffuse			materials/textures/gui/hud/building_icons/dehumidifier_disabled.dds
}

material gui/hud/building_icons/dehumidifier_lvl2 : gui/default
{
	set_texture_alias diffuse			materials/textures/gui/hud/building_icons/dehumidifier_lvl2.dds
}
material gui/hud/building_icons/dehumidifier_lvl2_disabled : gui/default
{
	set_texture_alias diffuse			materials/textures/gui/hud/building_icons/dehumidifier_lvl2_disabled.dds
}

material gui/hud/building_icons/dehumidifier_lvl3 : gui/default
{
	set_texture_alias diffuse			materials/textures/gui/hud/building_icons/dehumidifier_lvl3.dds
}
material gui/hud/building_icons/dehumidifier_lvl3_disabled : gui/default

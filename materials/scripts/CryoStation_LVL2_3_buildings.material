import * from "materials/scripts/buildings_main.material"

material buildings/main/cryo_station_lvl_2 : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/main/cryo_station_lvl_2_albedo.dds
	set_texture_alias normal			materials/textures/buildings/main/cryo_station_normal.dds
	set_texture_alias packed			materials/textures/buildings/main/cryo_station_packed.dds
	set_texture_alias emissive			materials/textures/buildings/main/cryo_station_emissive.dds

	glow 4
}


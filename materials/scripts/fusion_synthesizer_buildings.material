import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"

material buildings/resources/fusion_synthesizer : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/resources/fusion_synthesizer_albedo.dds
	set_texture_alias normal			materials/textures/buildings/resources/fusion_synthesizer_normal.dds
	set_texture_alias packed			materials/textures/buildings/energy/fusion_powerplant_packed.dds
	set_texture_alias emissive			materials/textures/buildings/energy/fusion_powerplant_emissive.dds

	glow 6
}

material buildings/resources/fusion_synthesizer_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/resources/fusion_synthesizer_albedo.dds
	set_texture_alias normal			materials/textures/buildings/resources/fusion_synthesizer_normal.dds
	set_texture_alias packed			materials/textures/buildings/energy/fusion_powerplant_packed.dds
	set_texture_alias emissive			materials/textures/buildings/energy/fusion_powerplant_emissive.dds

	glow 6
}

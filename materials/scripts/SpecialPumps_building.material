import * from "materials/scripts/buildings_resources.material"

material buildings/resources/liquid_pump_magma : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/resources/liquid_pump_magma_albedo.dds
	set_texture_alias normal			materials/textures/buildings/resources/liquid_pump_lvl_3_normal.dds
	set_texture_alias packed			materials/textures/buildings/resources/liquid_pump_lvl_3_packed.dds
	set_texture_alias emissive			materials/textures/buildings/resources/liquid_pump_magma_emissive.dds

	glow 4
}

